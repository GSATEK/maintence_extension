<odoo>
    <data noupdate="1">
        <record id="group_portal_worker" model="res.groups">
            <field name="name">Portal Worker</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="model_maintenance_request_access_portal_worker" model="ir.model.access">
            <field name="name">maintenance.request access for portal worker</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="group_id" ref="group_portal_worker"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="maintenance_request_rule_portal_worker" model="ir.rule">
            <field name="name">Maintenance Request Rule for Portal Worker</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="groups" eval="[(4, ref('group_portal_worker'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>
    </data>
</odoo>