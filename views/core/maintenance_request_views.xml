<odoo>
    <data>
        <record id="view_maintenance_request_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.request.form.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='maintenance_type']" position="after">
                    <field name="is_periodic_inspection"/>
                    <field name="expiration_date"/>
                </xpath>
                <sheet>
                     <notebook position="inside">
                        <page string="Tareas">
                            <field name="task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="tipo_mantenimiento_id"/>
                                    <field name="time"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Detalles adicionales">
                            <group>
                                <field name="work_done"/>
                                <field name="materials_used"/>
                                <field name="observations"/>
                            </group>
                        </page>
                         <page string="Firmas">
                             <group>
                                 <field name="worker_signature"/>
                                 <field name="client_signature"/>
                             </group>
                         </page>
                    </notebook>
                </sheet>
            </field>
        </record>
    </data>
</odoo>