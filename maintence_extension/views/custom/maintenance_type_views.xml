<odoo>
    <data>
        <record id="view_maintenance_type_tree" model="ir.ui.view">
            <field name="name">maintenance.type.tree</field>
            <field name="model">maintenance.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_maintenance_type_form" model="ir.ui.view">
            <field name="name">maintenance.type.form</field>
            <field name="model">maintenance.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_maintenance_type" model="ir.actions.act_window">
            <field name="name">Tipos de mantenimiento</field>
            <field name="res_model">maintenance.type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_maintenance_type_tree"/>
        </record>

        <menuitem id="menu_maintenance_type" name="Tipos de Mantenimiento" parent="maintenance.menu_maintenance_title" action="action_maintenance_type" sequence="20"/>
    </data>
</odoo>