<odoo>
    <data>
        <record id="view_maintenance_task_tree" model="ir.ui.view">
            <field name="name">maintenance.task.tree</field>
            <field name="model">maintenance.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="maintenance_tpye"/>
                    <field name="time" widget="float_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_maintenance_task_form" model="ir.ui.view">
            <field name="name">maintenance.task.form</field>
            <field name="model">maintenance.task</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="maintenance_tpye"/>
                            <field name="time" widget="float_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="action_maintenance_task" model="ir.actions.act_window">
            <field name="name">Tareas de mantenimiento</field>
            <field name="res_model">maintenance.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_maintenance_task_tree"/>
        </record>

        <menuitem id="menu_maintenance_task" name="Tareas de mantenimiento" parent="maintenance.menu_maintenance_title" action="action_maintenance_task" sequence="21"/>
    </data>
</odoo>