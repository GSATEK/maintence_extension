<odoo>
    <data>
        <record id="view_maintenance_request_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.request.form.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='maintenance_type']" position="after">
                    <field name="is_periodic_inspection"/>
                    <field name="expiration_date"/>
                    <field name="contract_type"/>
                    <field name="manager_id"/>
                </xpath>
                <sheet>
                     <notebook position="inside">
                        <page string="Tareas">
                            <field name="task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="maintenance_tpye"/>
                                    <field name="time" widget="float_time"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Detalles adicionales">
                            <group>
                                <field name="observations"/>
                            </group>
                        </page>
                         <page string="Firmas">
                             <group>
                                 <field name="worker_signature"/>
                                 <field name="client_signature"/>
                             </group>
                         </page>
                         <page string="Productos">
                                 <field name="product_ids">
                                     <tree>
                                         <field name="product_id"/>
                                         <field name="quantity"/>
                                     </tree>
                                 </field>
                         </page>
                    </notebook>
                </sheet>
            </field>
        </record>
    </data>
</odoo>