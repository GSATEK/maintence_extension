<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_maintenance_equipment_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='equipment_assign_to']" position="after">
                    <field name="partner_id" attrs="{'invisible': [('equipment_assign_to', '!=', 'client')]}"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('equipment_assign_to', '=', 'department'), ('equipment_assign_to', '=', 'client'), ('equipment_assign_to', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('equipment_assign_to', '=', 'employee'), ('equipment_assign_to', '=', 'client'), ('equipment_assign_to', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>